root = true

[*]

charset = utf-8
end_of_line = lf

trim_trailing_whitespace = true
insert_final_newline = true

indent_style = space
indent_size = 4

# 4 space indentation
[*.coffee]
indent_size = 4

[{package.json,.travis.yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_size = 2
